<div class="crancy-wc__form--middle">
    <div class="crancy-wc__banner">
        <img src="~/img/welcome-vector.png" alt="#">
    </div>
    <div class="crancy-wc__form-inner">
        <div class="crancy-wc__logo">
            <img src="~/img/logo-white.png">
        </div>
        <div class="crancy-wc__heading">
            <h3 class="crancy-wc__form-title crancy-wc__form-title__one">Đã có tài khoản</h3>
        </div>
        <!-- Sign in Form -->
        <form class="crancy-wc__form-main" action="index.html" method="post">
            <!-- Form Group -->
            <div class="form-group">
                <div class="form-group__input">
                    <label class="label-input">Email</label>
                    <input class="crancy-wc__form-input" type="email" name="email" required="required">
                </div>
            </div>
            <!-- Form Group -->
            <div class="form-group">
                <div class="form-group__input">
                    <label class="label-input">Mật khẩu</label>
                    <input class="crancy-wc__form-input" id="password-field" type="password" name="password" maxlength="8" required="required">
                    <span class="crancy-wc__toggle"><i class="fas fa-eye" id="toggle-icon"></i></span>
                </div>
            </div>
            <!-- Form Group -->
            <div class="form-group">
                <div class="crancy-wc__check-inline">
                    <div class="crancy-wc__checkbox">
                        <p class="crancy-wc__text">Nếu bạn chưa có tài khoản ? <a onclick="onButtonCreateAccountClicked()">Đăng ký</a></p>
                    </div>
                    <div class="crancy-wc__forgot">
                        <a onclick="onButtonForgotPasswordClicked()" class="forgot-pass">Quên mật khẩu?</a>
                    </div>
                </div>
            </div>
            <!-- Form Group -->
            <div class="form-group form-mg-top25" style="text-align: center;">
                <button class="crancy-btn" type="submit" onclick="onButtonLoginClicked()">Đăng nhập</button>
            </div>
        </form>
        <!-- End Sign in Form -->
    </div>
</div>

<script>
    function onButtonLoginClicked() {
        location.href = '@Url.Action("Index", "Login", new { area = "" })';
    }

    function onButtonCreateAccountClicked() {
        location.href = '@Url.Action("Index", "CreateAccount", new { area = "" })';
    }

    function onButtonForgotPasswordClicked() {
        location.href = '@Url.Action("Index", "ForgotPassword", new { area = "" })';
    }
</script>